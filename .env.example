# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=.vercel.app,localhost,127.0.0.1

# Database Configuration - Supabase PostgreSQL
# Get this from Supabase Dashboard > Project Settings > Database > Connection String > URI
# Format: postgresql://postgres:[YOUR-PASSWORD]@db.xxx.supabase.co:5432/postgres
DATABASE_URL=postgresql://postgres:your-password@db.xxx.supabase.co:5432/postgres

# Example for local development (leave DATABASE_URL empty to use SQLite):
# DATABASE_URL=
